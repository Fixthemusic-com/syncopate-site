<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding-top: 80px;
    position: relative;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .hero-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
    opacity: 0.5;
  }

  .hero-orb-1 {
    width: 600px; height: 600px;
    background: rgba(124, 58, 237, 0.2);
    top: -200px; right: -100px;
    animation: float 8s ease-in-out infinite;
  }

  .hero-orb-2 {
    width: 400px; height: 400px;
    background: rgba(0, 229, 255, 0.1);
    bottom: -100px; left: -50px;
    animation: float 10s ease-in-out infinite reverse;
  }

  .hero-orb-3 {
    width: 300px; height: 300px;
    background: rgba(255, 179, 0, 0.08);
    top: 50%; left: 30%;
    animation: float 12s ease-in-out infinite;
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    position: relative;
    z-index: 1;
  }

  .hero-text h1 {
    margin-bottom: 1.25rem;
  }

  .hero-sub {
    font-size: 1.15rem;
    line-height: 1.7;
    max-width: 520px;
    margin-bottom: 2rem;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  /* --- Chat mockup --- */
  .chat-window {
    background: var(--surface-2);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-card);
    animation: glow-pulse 4s ease-in-out infinite;
  }

  .chat-header-bar {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    background: var(--surface-3);
    border-bottom: 1px solid var(--border-subtle);
  }

  .chat-dot {
    width: 10px; height: 10px;
    border-radius: 50%;
  }
  .chat-dot.red { background: #ff5f57; }
  .chat-dot.yellow { background: #febc2e; }
  .chat-dot.green { background: #28c840; }

  .chat-title {
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--text-secondary);
    margin-left: 0.5rem;
  }

  .chat-messages {
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-height: 420px;
    overflow: hidden;
  }

  .msg {
    display: flex;
    gap: 0.65rem;
    opacity: 0;
    animation: slide-in-left 0.5s var(--ease-out) forwards;
    animation-delay: var(--delay, 0s);
  }

  .msg-ai { animation-name: slide-in-right; }

  .msg-avatar {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: var(--surface-3);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.9rem;
    flex-shrink: 0;
  }

  .msg-body {
    flex: 1;
    min-width: 0;
  }

  .msg-name {
    font-size: 0.78rem;
    font-weight: 600;
    display: block;
    margin-bottom: 0.2rem;
  }

  .msg-body p {
    font-size: 0.82rem;
    color: var(--text-secondary);
    margin: 0 0 0.3rem;
    line-height: 1.5;
  }

  .msg-embed {
    background: var(--surface-3);
    border-left: 3px solid var(--accent-cyan);
    border-radius: 0 var(--radius-sm) var(--radius-sm) 0;
    padding: 0.5rem 0.75rem;
    margin-top: 0.4rem;
  }

  .avail-row {
    font-size: 0.78rem;
    color: var(--text-secondary);
    padding: 0.15rem 0;
  }

  .msg-card {
    background: var(--surface-3);
    border: 1px solid var(--border-accent);
    border-radius: var(--radius-md);
    padding: 0.85rem;
    margin-top: 0.3rem;
  }

  .msg-card strong {
    font-size: 0.85rem;
    display: block;
    margin-bottom: 0.3rem;
    color: var(--text-primary);
  }

  .msg-card p {
    font-size: 0.78rem;
    margin: 0 0 0.5rem;
  }

  .msg-btns {
    display: flex;
    gap: 0.5rem;
  }

  .mock-btn {
    font-size: 0.72rem;
    font-weight: 600;
    padding: 0.35rem 0.75rem;
    border-radius: var(--radius-sm);
    background: var(--surface-4);
    color: var(--text-secondary);
    cursor: default;
  }

  .mock-btn.primary {
    background: var(--accent-amber);
    color: var(--surface-0);
  }

  @media (max-width: 960px) {
    .hero-content {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .hero-sub { margin-left: auto; margin-right: auto; }
    .hero-actions { justify-content: center; }

    .hero-demo {
      max-width: 480px;
      margin: 0 auto;
    }
  }

  @media (max-width: 480px) {
    .chat-messages { max-height: 360px; }
  }
</style>
