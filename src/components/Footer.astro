---
import { FOOTER_LINKS } from '../consts';
---

<footer class="site-footer">
  <div class="container">
    <div class="footer-grid">
      <div class="footer-brand">
        <a href="/" class="footer-logo" aria-label="Syncopate Home">
          <span class="logo-icon">âš¡</span>
          <span class="logo-text">syncopate</span>
        </a>
        <p class="footer-tagline">
          The chat-first platform where business happens.
        </p>
        <div class="footer-social">
          <a href="https://github.com" aria-label="GitHub" class="social-link">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/></svg>
          </a>
          <a href="https://twitter.com" aria-label="X / Twitter" class="social-link">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
          </a>
        </div>
      </div>

      <div class="footer-col">
        <h4>Product</h4>
        {FOOTER_LINKS.product.map((link) => (
          <a href={link.href}>{link.label}</a>
        ))}
      </div>

      <div class="footer-col">
        <h4>Company</h4>
        {FOOTER_LINKS.company.map((link) => (
          <a href={link.href}>{link.label}</a>
        ))}
      </div>

      <div class="footer-col">
        <h4>Resources</h4>
        {FOOTER_LINKS.resources.map((link) => (
          <a href={link.href}>{link.label}</a>
        ))}
      </div>
    </div>

    <div class="footer-bottom">
      <p>&copy; {new Date().getFullYear()} Syncopate. All rights reserved.</p>
      <p class="footer-quote">Stop being the human router between your chat and your dashboard.</p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background: var(--surface-1);
    border-top: 1px solid var(--border-subtle);
    padding: 5rem 0 2.5rem;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 3rem;
  }

  .footer-brand {
    max-width: 300px;
  }

  .footer-logo {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: var(--text-primary);
    margin-bottom: 1rem;
  }

  .footer-logo .logo-icon { font-size: 1.3rem; }
  .footer-logo .logo-text { font-size: 1.25rem; font-weight: 700; letter-spacing: -0.03em; }

  .footer-tagline {
    font-size: 0.9rem;
    color: var(--text-muted);
    line-height: 1.6;
  }

  .footer-social {
    display: flex;
    gap: 1rem;
    margin-top: 1.25rem;
  }

  .social-link {
    color: var(--text-muted);
    transition: color var(--transition-fast);
  }

  .social-link:hover {
    color: var(--accent-cyan);
  }

  .footer-col h4 {
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-primary);
    margin-bottom: 1.25rem;
  }

  .footer-col a {
    display: block;
    font-size: 0.9rem;
    color: var(--text-muted);
    text-decoration: none;
    padding: 0.35rem 0;
    transition: color var(--transition-fast);
  }

  .footer-col a:hover {
    color: var(--text-primary);
  }

  .footer-bottom {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border-subtle);
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .footer-bottom p {
    font-size: 0.8rem;
    color: var(--text-muted);
    margin: 0;
  }

  .footer-quote {
    font-style: italic;
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
      gap: 2.5rem;
    }

    .footer-brand {
      grid-column: 1 / -1;
      max-width: none;
    }

    .footer-bottom {
      flex-direction: column;
      text-align: center;
    }
  }
</style>
